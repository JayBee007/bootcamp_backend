<% include ./partials/header %>


<div class="ui container">
    <h1>Index Page</h1>    
        <% blogs.forEach(function (blog) { %>
            <div>
                <h2><%= blog.title %></h2>
                <img src="<%= blog.image %>">
                <p><%= blog.body.substring(0, 200) %>...</p>
                <a class="ui basic purple button" href="/blogs/<%= blog._id %>">Read More...</a>
                <p><%= blog.created.toDateString() %></p>
            </div>
        
        <% }) %>
</div>


<% include ./partials/footer %>