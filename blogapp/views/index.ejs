<% include ./partials/header %>


<div class="ui main text container">
    
    <h1 class="ui huge header">RESTful Blog App</h1>    
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function (blog) { %>
            <div class="item">
                <div class="ui image">
                    <img src="<%= blog.image %>">
                </div>
                <div class="content">
                    <a class="ui header" href="/blogs/<%=blog._id%>"><%=blog.title%></a> 
                    <div class="meta">
                        <span><%= blog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%- blog.body.substring(0, 200) %>...</p>        
                    </div>
                    <div class="extra">
                        <a class="ui floated basic orange button" href="/blogs/<%=blog._id%>">Read More <i class="right chevron icon"></i></a> 
                    </div>
                </div>
            </div>
        
            <% }) %>    
        </div>
    </div>
        
</div>


<% include ./partials/footer %>