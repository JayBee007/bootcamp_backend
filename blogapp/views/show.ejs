<% include ./partials/header %>


<div class="ui main text container segment">
    <h1 class="ui huge header"><%= blog.title %></h1>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>">        
        </div>
        <div class="content">
            <span><%= blog.created.toDateString() %></span>
        </div>
        <div class="description">
            <p><%- blog.body%></p>
        </div>
        <a class="ui basic green button" href="/blogs/<%=blog._id%>/edit">Edit</a>
        <form style="display:inline;" class="ui form" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
            <button class="ui basic red button">Delete</button>
        </form>
    </div>
    
    
</div>


<% include ./partials/footer %>